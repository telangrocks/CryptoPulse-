# =============================================================================
# CryptoPulse Backend Environment Template - Production Ready
# =============================================================================
# Copy this file to backend/.env.backend and configure with your values
# 
# SECURITY WARNING: Replace all placeholder values with cryptographically secure secrets
# Use the setup scripts to generate secure secrets: pnpm run setup:prod

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=1337
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL - REQUIRED
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://cryptopulse_user:CHANGE_ME_SECURE_PASSWORD@localhost:5432/cryptopulse_dev

# MongoDB URL (optional - for analytics and logging)
MONGODB_URL=mongodb://localhost:27017/cryptopulse

# Redis URL for caching - RECOMMENDED
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION - CRITICAL
# =============================================================================
# WARNING: These secrets MUST be cryptographically secure for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# JWT Secret (32+ characters, cryptographically secure)
JWT_SECRET=CHANGE_ME_32_CHARACTER_CRYPTO_SECURE_JWT_SECRET

# Encryption Key (32+ characters, cryptographically secure)
ENCRYPTION_KEY=CHANGE_ME_32_CHARACTER_CRYPTO_SECURE_ENCRYPTION_KEY

# CSRF Secret (32+ characters, cryptographically secure)
CSRF_SECRET=CHANGE_ME_32_CHARACTER_CRYPTO_SECURE_CSRF_SECRET

# Session Secret (32+ characters, cryptographically secure)
SESSION_SECRET=CHANGE_ME_32_CHARACTER_CRYPTO_SECURE_SESSION_SECRET

# =============================================================================
# EXCHANGE API CONFIGURATION - OPTIONAL
# =============================================================================
# WARNING: Only use testnet/sandbox keys for development
# Production keys should be stored in a secure secrets management system

# Binance API (use testnet keys for development)
BINANCE_API_KEY=CHANGE_ME_TO_YOUR_BINANCE_API_KEY
BINANCE_SECRET_KEY=CHANGE_ME_TO_YOUR_BINANCE_SECRET_KEY

# WazirX API
WAZIRX_API_KEY=CHANGE_ME_TO_YOUR_WAZIRX_API_KEY
WAZIRX_SECRET_KEY=CHANGE_ME_TO_YOUR_WAZIRX_SECRET_KEY

# CoinDCX API
COINDCX_API_KEY=CHANGE_ME_TO_YOUR_COINDCX_API_KEY
COINDCX_SECRET_KEY=CHANGE_ME_TO_YOUR_COINDCX_SECRET_KEY

# Delta Exchange API
DELTA_API_KEY=CHANGE_ME_TO_YOUR_DELTA_API_KEY
DELTA_SECRET_KEY=CHANGE_ME_TO_YOUR_DELTA_SECRET_KEY

# Coinbase API
COINBASE_API_KEY=CHANGE_ME_TO_YOUR_COINBASE_API_KEY
COINBASE_SECRET_KEY=CHANGE_ME_TO_YOUR_COINBASE_SECRET_KEY
COINBASE_PASSPHRASE=CHANGE_ME_TO_YOUR_COINBASE_PASSPHRASE

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION - REQUIRED FOR PAYMENTS
# =============================================================================
# Cashfree Payment Gateway
CASHFREE_APP_ID=CHANGE_ME_TO_YOUR_CASHFREE_APP_ID
CASHFREE_SECRET_KEY=CHANGE_ME_TO_YOUR_CASHFREE_SECRET_KEY
CASHFREE_WEBHOOK_SECRET=CHANGE_ME_TO_YOUR_CASHFREE_WEBHOOK_SECRET
CASHFREE_MODE=sandbox

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Slack Webhook for alerts (optional)
SLACK_WEBHOOK_URL=CHANGE_ME_TO_YOUR_SLACK_WEBHOOK_URL

# Email configuration for alerts (optional)
ALERT_EMAIL=CHANGE_ME_TO_YOUR_ALERT_EMAIL
SMTP_HOST=CHANGE_ME_TO_YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USER=CHANGE_ME_TO_YOUR_SMTP_USER
SMTP_PASS=CHANGE_ME_TO_YOUR_SMTP_PASSWORD

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# CORS configuration
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF protection
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (should be false in production)
ENABLE_DEBUG=true

# Enable mock data for testing (should be false in production)
ENABLE_MOCK_DATA=true

# Enable API documentation (should be false in production)
ENABLE_API_DOCS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# HTTPS configuration (should be true in production)
HTTPS_ENABLED=false
SSL_CERT_PATH=CHANGE_ME_TO_YOUR_SSL_CERT_PATH
SSL_KEY_PATH=CHANGE_ME_TO_YOUR_SSL_KEY_PATH

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis connection pool
REDIS_POOL_MIN=1
REDIS_POOL_MAX=5

# =============================================================================
# CLOUD CONFIGURATION
# =============================================================================
# Northflank configuration
NORTHFLANK_PROJECT_ID=CHANGE_ME_TO_YOUR_NORTHFLANK_PROJECT_ID
NORTHFLANK_API_KEY=CHANGE_ME_TO_YOUR_NORTHFLANK_API_KEY

# AWS configuration (if using AWS services)
AWS_ACCESS_KEY_ID=CHANGE_ME_TO_YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_TO_YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=CHANGE_ME_TO_YOUR_S3_BUCKET_NAME

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_TRADING=true
ENABLE_AI_ASSISTANT=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CoinGecko API (for market data)
COINGECKO_API_KEY=CHANGE_ME_TO_YOUR_COINGECKO_API_KEY

# News API (for market news)
NEWS_API_KEY=CHANGE_ME_TO_YOUR_NEWS_API_KEY

# Sentry (for error tracking)
SENTRY_DSN=CHANGE_ME_TO_YOUR_SENTRY_DSN

# =============================================================================
# PRODUCTION READINESS NOTES
# =============================================================================
# 1. Replace all CHANGE_ME values with your actual configuration
# 2. Use cryptographically secure secrets for production (32+ chars)
# 3. Never commit this file with real credentials
# 4. Use environment-specific files (.env.development, .env.production)
# 5. Consider using a secrets management service for production
# 6. Run 'pnpm run setup:prod' to generate secure secrets
# 7. Validate configuration with 'pnpm run verify:production'
# 8. Enable HTTPS and SSL certificates for production
# 9. Set up monitoring and alerting
# 10. Configure database backups and disaster recovery

