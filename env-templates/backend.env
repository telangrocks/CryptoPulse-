# =============================================================================
# CryptoPulse Backend Environment Template
# =============================================================================
# Copy this file to backend/.env.backend and configure with your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=1337
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://cryptopulse_user:your_password@localhost:5432/cryptopulse_dev

# MongoDB URL (optional)
MONGODB_URL=mongodb://localhost:27017/cryptopulse

# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Encryption Key (generate a strong random string)
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# CSRF Secret (generate a strong random string)
CSRF_SECRET=your_csrf_secret_here_change_this_in_production

# Session Secret (generate a strong random string)
SESSION_SECRET=your_session_secret_here_change_this_in_production

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================
# Binance API (use testnet keys for development)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# WazirX API
WAZIRX_API_KEY=your_wazirx_api_key_here
WAZIRX_SECRET_KEY=your_wazirx_secret_key_here

# CoinDCX API
COINDCX_API_KEY=your_coindcx_api_key_here
COINDCX_SECRET_KEY=your_coindcx_secret_key_here

# Delta Exchange API
DELTA_API_KEY=your_delta_api_key_here
DELTA_SECRET_KEY=your_delta_secret_key_here

# Coinbase API
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Cashfree Payment Gateway
CASHFREE_APP_ID=your_cashfree_app_id_here
CASHFREE_SECRET_KEY=your_cashfree_secret_key_here
CASHFREE_WEBHOOK_SECRET=your_cashfree_webhook_secret_here
CASHFREE_MODE=sandbox

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Slack Webhook for alerts (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email configuration for alerts (optional)
ALERT_EMAIL=alerts@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# CORS configuration
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF protection
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
ENABLE_DEBUG=true

# Enable mock data for testing
ENABLE_MOCK_DATA=true

# Enable API documentation
ENABLE_API_DOCS=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# HTTPS configuration
HTTPS_ENABLED=false
SSL_CERT_PATH=path/to/ssl/cert.pem
SSL_KEY_PATH=path/to/ssl/private.key

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis connection pool
REDIS_POOL_MIN=1
REDIS_POOL_MAX=5

# =============================================================================
# CLOUD CONFIGURATION
# =============================================================================
# Northflank configuration
NORTHFLANK_PROJECT_ID=your_northflank_project_id
NORTHFLANK_API_KEY=your_northflank_api_key

# AWS configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_TRADING=true
ENABLE_AI_ASSISTANT=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CoinGecko API (for market data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# News API (for market news)
NEWS_API_KEY=your_news_api_key_here

# Sentry (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual configuration
# 2. Use strong, unique secrets for production
# 3. Never commit this file with real credentials
# 4. Use environment-specific files (.env.development, .env.production)
# 5. Consider using a secrets management service for production

