# =============================================================================
# CryptoPulse Frontend Environment Template
# =============================================================================
# Copy this file to frontend/.env.local and configure with your values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
VITE_API_BASE_URL=http://localhost:1337
VITE_BACKEND_URL=http://localhost:1337

# Frontend URL
VITE_FRONTEND_URL=http://localhost:3000

# =============================================================================
# PRODUCTION URLS
# =============================================================================
# Production API URL
VITE_PRODUCTION_API_URL=https://api.cryptopulse.com

# Production Frontend URL
VITE_PRODUCTION_FRONTEND_URL=https://app.cryptopulse.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# CoinGecko API for market data
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3
VITE_COINGECKO_API_KEY=your_coingecko_api_key_here

# News API for market news
VITE_NEWS_API_URL=https://newsapi.org/v2
VITE_NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
VITE_ENABLE_TRADING=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics (optional)
VITE_GA_TRACKING_ID=your_ga_tracking_id_here

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Hotjar for user analytics (optional)
VITE_HOTJAR_ID=your_hotjar_id_here

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Cashfree Payment Gateway
VITE_CASHFREE_APP_ID=your_cashfree_app_id_here
VITE_CASHFREE_MODE=sandbox

# Stripe (if using)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket URL for real-time data
VITE_WS_URL=ws://localhost:1337/ws
VITE_WS_PRODUCTION_URL=wss://api.cryptopulse.com/ws

# =============================================================================
# THEME & UI CONFIGURATION
# =============================================================================
# Default theme
VITE_DEFAULT_THEME=dark

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Enable sound effects
VITE_ENABLE_SOUNDS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development tools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses
VITE_MOCK_API=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Content Security Policy
VITE_CSP_NONCE=your_csp_nonce_here

# Enable HTTPS in development
VITE_HTTPS=false

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache duration in milliseconds
VITE_CACHE_DURATION=300000

# Enable service worker
VITE_ENABLE_SERVICE_WORKER=true

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Default trading pair
VITE_DEFAULT_TRADING_PAIR=BTCUSDT

# Supported exchanges
VITE_SUPPORTED_EXCHANGES=binance,wazirx,coindcx,delta,coinbase

# Default risk level
VITE_DEFAULT_RISK_LEVEL=MODERATE

# =============================================================================
# AI ASSISTANT CONFIGURATION
# =============================================================================
# AI API endpoint
VITE_AI_API_URL=http://localhost:1337/api/v1/ai

# AI model configuration
VITE_AI_MODEL=gpt-3.5-turbo
VITE_AI_MAX_TOKENS=1000
VITE_AI_TEMPERATURE=0.7

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Enable push notifications
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Notification API endpoint
VITE_NOTIFICATION_API_URL=http://localhost:1337/api/v1/notifications

# =============================================================================
# NOTES
# =============================================================================
# 1. All VITE_ prefixed variables are available in the frontend code
# 2. Replace placeholder values with your actual configuration
# 3. Never commit this file with real credentials
# 4. Use environment-specific files (.env.development, .env.production)
# 5. Restart the development server after changing these values
