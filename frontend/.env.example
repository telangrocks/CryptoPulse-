# CryptoPulse Frontend Environment Variables
# Copy this file to .env and configure your environment

# API Configuration
VITE_API_BASE_URL=http://localhost:1337
VITE_WS_URL=ws://localhost:1337/ws

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEVTOOLS=true

# External API URLs
VITE_BINANCE_API_URL=https://api.binance.com
VITE_WAZIRX_API_URL=https://api.wazirx.com
VITE_COINDCX_API_URL=https://api.coindcx.com
VITE_COINGECKO_API_URL=https://api.coingecko.com

# Security
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true

# Performance
VITE_ENABLE_CACHING=true
VITE_CACHE_TTL=300000
VITE_MAX_CACHE_SIZE=50

# Development
VITE_HTTPS=false
VITE_PORT=3000
VITE_HOST=localhost

# Production Overrides (uncomment for production)
# VITE_API_BASE_URL=https://api.cryptopulse.com
# VITE_WS_URL=wss://api.cryptopulse.com/ws
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_MOCK_DATA=false
# VITE_ENABLE_DEVTOOLS=false
