{
  "name": "cryptopulse-backend",
  "version": "2.0.0",
  "description": "CryptoPulse Trading Bot Backend - Production Ready",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "echo 'Backend build completed'",
    "start:production": "NODE_ENV=production node index.js",
    "build:production": "NODE_ENV=production node verify-production.js",
    "setup:env": "node setup-env.js",
    "setup:dev": "node setup-env.js development",
    "setup:prod": "node setup-production.js",
    "setup:production": "node setup-production.js",
    "verify:production": "node verify-production.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:security": "node ../scripts/security-audit.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "echo 'Backend typecheck completed (JavaScript project)'",
    "clean": "rimraf node_modules dist coverage",
    "health": "curl -f http://localhost:${PORT:-1337}/health || echo 'Backend not running'",
    "health:detailed": "curl -f http://localhost:${PORT:-1337}/health/detailed || echo 'Backend not running'",
    "audit:security": "node ../scripts/security-audit.js",
    "audit:deps": "pnpm audit --audit-level=moderate",
    "precommit": "pnpm lint && pnpm test && pnpm audit:security",
    "production:check": "pnpm verify:production && pnpm audit:deps && pnpm test:ci",
    "config:validate": "node ../scripts/config-validator.js",
    "config:secrets": "node ../scripts/secrets-manager.js audit",
    "config:secrets:generate": "node ../scripts/secrets-manager.js generate",
    "config:secrets:audit": "node ../scripts/secrets-manager.js audit",
    "config:secrets:rotate": "node ../scripts/secrets-manager.js rotate"
  },
  "dependencies": {
    "axios": "1.12.0",
    "@node-rs/bcrypt": "1.10.4",
    "compression": "1.8.1",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "envalid": "8.1.0",
    "express": "4.21.2",
    "express-rate-limit": "7.5.1",
    "express-slow-down": "3.0.0",
    "express-validator": "7.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "es-toolkit": "1.39.10",
    "date-fns": "4.1.0",
    "mongodb": "6.10.0",
    "mongoose": "8.9.5",
    "node-cache": "5.1.2",
    "pg": "8.13.1",
    "redis": "4.7.0",
    "winston": "3.17.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "mongodb-memory-server": "10.1.2",
    "nodemon": "3.1.9",
    "supertest": "7.0.0",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.7",
    "@types/pg": "8.11.10"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "bot",
    "backend",
    "api",
    "northflank"
  ],
  "author": "CryptoPulse Team",
  "license": "MIT"
}
